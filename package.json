{
  "name": "boxdb",
  "version": "0.0.0",
  "description": "Object relation mapping for IndexedDB",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src",
    "build": "npm run lint & npm run build:umd & npm run build:es & npm run build:unpkg",
    "build:umd": "rollup --config build/rollup.config.ts --format umd --file dist/box-db.umd.js",
    "build:es": "rollup --config build/rollup.config.ts --format es --file dist/box-db.esm.js",
    "build:unpkg": "rollup --config build/rollup.config.ts --format iife --file dist/box-db.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leegeunhyeok/box-db.git"
  },
  "keywords": [
    "idb",
    "indexeddb",
    "orm"
  ],
  "author": "Geunhyeok LEE <dev.ghlee@gmail.com> (https://github.com/leegeunhyeok)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/leegeunhyeok/box-db/issues"
  },
  "homepage": "https://github.com/leegeunhyeok/box-db#readme",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.15.0",
    "fake-indexeddb": "^3.1.2",
    "jest": "^26.6.3",
    "rollup": "^2.34.2",
    "typescript": "^4.1.2"
  }
}
